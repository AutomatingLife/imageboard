extends ../layout.pug
include ../mixins/catalogtile.pug

block head
	title /#{board._id}/ - Catalog

block content
	include ../includes/catalogheader.pug
	br
	include ../includes/postform.pug
	br
	include ../includes/stickynav.pug
	.pad-anchor#top
		nav.pages
			a(href=`/${board._id}/index.html`) [Return]
	hr(size=1)
	if threads.length === 0
		p No posts.
	section.catalog
		for thread in threads
			+catalogtile(board, thread)
	hr(size=1)
	nav.pages#bottom
		a(href=`/${board._id}/index.html`) [Return]
