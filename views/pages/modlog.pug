extends ../layout.pug
include ../mixins/boardheader.pug
include ../mixins/boardnav.pug

block head
	script(src='/js/all.js')
	title /#{board._id}/ - Logs for #{startDate.toDateString()}

block content
	+boardheader('Logs')
	br
	include ../includes/stickynav.pug
	.pages
		+boardnav('logs', true, true)
	hr(size=1)
	.table-container.flex-center.mv-10.text-center
		table
				tr
					th Date
					th User
					th Actions
					th Post IDs
					th Log Message
				for log in logs
					tr
						td #{log.date.toLocaleString(undefined, {hour12:false})}
						td(class=(!log.showUser ? 'em' : '')) #{log.showUser ? log.user : 'Hidden User'}
						td #{log.actions}
						td #{log.postIds}
						td #{log.message || '-'}
	hr(size=1)
	.pages
		+boardnav('logs', true, true)
